<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CourtInvitor.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CourtInvitor.Models"
    xmlns:vm="clr-namespace:CourtInvitor.ViewModels"
    x:DataType="vm:MainPageVM"
    IsBusy="{Binding IsBusy}">
    <VerticalStackLayout Margin="10" Spacing="25">
        <Border
            Padding="10"
            Stroke="Olive"
            StrokeShape="RoundRectangle 8"
            StrokeThickness="1">
            <Entry 
                Placeholder="{x:Static m:Strings.Name}" 
                Text="{Binding Name}" />
        </Border>
        <Border
                Padding="10"
                Stroke="Olive"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="1">
            <Grid
            Padding="10"
            ColumnDefinitions="*,Auto"
            VerticalOptions="Center">
                <Entry 
                    Placeholder="{x:Static m:Strings.Password}" 
                    Text="{Binding Pass}"
                    IsPassword="{Binding IsPassword}"/>
                <Button
                BackgroundColor="Transparent"
                BorderWidth="0"
                Command="{Binding ToggleIsPasswordCommand}"
                FontFamily="MaterialSymbols"
                FontSize="24"
                Style="{StaticResource IconButtonStyle}"
                HorizontalOptions="End"
                Text="{Binding IsPassword, Converter={StaticResource passwordIconConvert}}"
                TextColor="Olive"
                VerticalOptions="Center"/>
            </Grid>
        </Border>
        <Button
            Command="{Binding LoginCommand}"
            CornerRadius="8"
            FontSize="18"
            HeightRequest="50"
            Text="{x:Static m:Strings.LoginButton}"
            TextColor="White" >
            <Button.ImageSource>
                <FontImageSource Glyph="{StaticResource IconLogin}">
                    <FontImageSource.FontFamily>MaterialSymbols</FontImageSource.FontFamily>
                </FontImageSource>
            </Button.ImageSource>
        </Button>

    </VerticalStackLayout>
</ContentPage>